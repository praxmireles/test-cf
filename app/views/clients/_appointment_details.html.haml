.modal-dialog.modal-lg
  / Modal content
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
      .chartContainer.col-sm-3.pl-4
        %p.data-attributes
          %span{"data-peity" => "{ \"fill\": [\"#85b93e\", \"#efefef\"], \"innerRadius\": 18, \"radius\": 30 }"} 1/2
        -# %p.ammount 50%
      .chartHeader.col-sm-9
        %h4.my-1
          = t('view_clients.settings.appointment_details')
        %p.my-1
          = t('view_clients.settings.last_update'):
          %span.greenText 3
            = t('view_clients.settings.days_ago')
    .modal-body.container-fluid
      .col-sm-12
        / Projet Info
        .panel.b-primary.bt-sm
          .panel-content
            %ul.user-contact-info.ph-sm
              %li
                %h4
                  %i.color-primary.mr-md.fa.fa-user>
                  = appointment.subject
            / Company and contact person
            .row
              .col-sm-12.col-md-6.grayBackground
                %h5.blueHeader
                  = t('services.mentoring_with_purpose')
                %p.projectinfoCompany= appointment.service.type.titleize
              .col-sm-12.col-md-6.grayBackground
                %h5.greenText
                  = t('view_clients.appointment_details.contact_person')
                %p.blackText= appointment.expert.fullname
            / Created and status
            .row
              .col-sm-12.col-md-4
                %h5.greenText
                  = t('view_clients.appointment_details.created')
                %p.projectinfoCompany= appointment.created_at.strftime("%D")
              .col-sm-12.col-md-4
                %h5.blueHeader
                  = t('view_clients.appointment_details.status_of_sessions') 
                .projectinfoCompany
                  %ul.sessionsContainer
                    - if appointment.close?
                      = t('view_clients.appointment_details.close')
                    - elsif appointment.cancelled?
                      = t('view_clients.appointment_details.cancelled')
                    - else
                      = t('view_clients.appointment_details.open')
                    -# %li= "#{appointment_pack.past_appointments.count} / #{appointment_pack.appointments.count}"
              / Actions container
              .col-sm-12.col-md-4
                %h5.blueHeader
                  = t('view_clients.appointment_details.duration') + ':'
                = "#{appointment.duration_in_min} min."

            .row
              / Actions container
              .col-sm-12.col-sm-offset-5
                %h5.blueHeader.text-center
                  = t('view_clients.appointment_details.actions')
                .actionsContainer
                  %ul.sessionsContainer.actions.p-0
                    %li.actionsBackground
                      %a.sessionAnchor{:href => "sessions.html"}
                        %i.fa.fa-plus{"aria-hidden" => "true"}
                    %li.actionsBackground
                      %a.sessionAnchor{:href => "sessions.html"}
                        %i.fa.fa-pencil{"aria-hidden" => "true"}
                    %li.actionsBackground
                      %a.sessionAnchor{:href => "sessions.html"}
                        %i.fa.fa-trash{"aria-hidden" => "true"}
            .row
              .col-sm-12
                .descriptionContainer.grayBackground.py-2.px-2
                  %h4{:style => "font-weight: bold;"}
                    = t('view_clients.appointment_details.description') + ':'
                  %p.blackText= appointment.search_history.description
